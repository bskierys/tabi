<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="?attr/actionBarSize"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            style="@style/BackArrow"
            android:src="@drawable/ic_close_light"/>

        <pl.ipebk.tabi.presentation.ui.custom.FontTextView
            android:id="@+id/txt_title"
            style="@style/Text_Body2.Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/Details.Margin.Outer"
            android:layout_weight="1"
            android:text="zachodniopomorskie"/>

        <pl.ipebk.tabi.presentation.ui.custom.FontTextView
            android:id="@+id/txt_plate"
            style="@style/Text_Title2.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="D"/>
    </LinearLayout>

    <ImageView style="@style/Divider.Horizontal"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>

