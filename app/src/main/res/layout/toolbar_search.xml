<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="@dimen/Details.Margin.Right"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/description_back_button"
                    android:paddingLeft="@dimen/Details.Margin.Outer"
                    android:paddingRight="@dimen/Details.Margin.Outer"
                    android:src="@drawable/ic_back"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <pl.ipebk.tabi.ui.custom.FontTextView
                        android:id="@+id/txt_searched"
                        style="@style/Details_Text.Search"/>

                    <pl.ipebk.tabi.ui.custom.FontEditText
                        android:id="@+id/editTxt_search"
                        style="@style/Details_Text.Search"
                        android:background="@android:color/transparent"
                        android:imeOptions="actionSearch|flagNoExtractUi"
                        android:inputType="textNoSuggestions"
                        android:textCursorDrawable="@drawable/dark_cursor"/>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/btn_clear"
                    android:layout_width="@dimen/Details.Margin.Right"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/description_close_button"
                    android:paddingLeft="@dimen/Details.Margin.Outer"
                    android:paddingRight="@dimen/Details.Margin.Outer"
                    android:src="@drawable/ic_close"/>
            </LinearLayout>

            <pl.ipebk.tabi.ui.search.SearchTabPageIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/Search.Height.Tabs"
                android:background="@color/white"
                android:textColor="@color/grey_850"
                android:textSize="@dimen/Search.Text.Header"
                app:fades="false"
                app:lineHeight="@dimen/Search.Height.Tabs.Underline"
                app:selectedTextColor="@color/colorPrimary"
                app:fontFamily="bebas"/>

        </LinearLayout>
    </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>