<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundLight"
        android:orientation="horizontal"
        android:paddingBottom="24dp"
        android:paddingTop="24dp">

        <RelativeLayout
            android:layout_width="56dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/vic_dolnoslaskie"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="56dp"
            android:paddingRight="56dp">

            <pl.ipebk.tabi.presentation.ui.custom.FontTextView
                android:id="@+id/txt_title"
                style="@style/Text_Title2.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Wrocław - miasto krasnali"/>

            <pl.ipebk.tabi.presentation.ui.custom.FontTextView
                android:id="@+id/txt_body"
                style="@style/Text_Body.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="We wrocławskim Podziemnym Mieście Krasnali żyje blisko trzysta skrzatów. I ciągle wprowadzają się nowe."/>

            <pl.ipebk.tabi.presentation.ui.custom.FontTextView
                android:id="@+id/txt_more"
                style="@style/Text_Body2.Accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Czytaj dalej"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/shadow"
        style="@style/Shadow.2dp"/>

    <include layout="@layout/row_header"/>
</LinearLayout>

