<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".ui.details.DetailsActivity"
              tools:showIn="@layout/activity_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_row"
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_doodle_search"
            android:contentDescription="fill me"/>
        
        <pl.ipebk.tabi.ui.custom.FontTextView
            android:id="@+id/txt_place_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="BiaÅ‚ogard"
            style="@style/Details_Text.Header"/>

        <pl.ipebk.tabi.ui.custom.FontTextView
            android:id="@+id/txt_plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ZBI"
            style="@style/Details_Text.Header"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/grey_300"
        android:contentDescription="fill me"/>

    <pl.ipebk.tabi.ui.custom.ObservableImageView
        android:id="@+id/img_placeholder"
        style="@style/Details_Placeholder"
        android:visibility="gone"/>

    <pl.ipebk.tabi.ui.custom.FontTextView
        android:id="@+id/txt_voivodeship"
        android:layout_marginTop="24dp"
        style="@style/Details_Text.Description"/>

    <pl.ipebk.tabi.ui.custom.FontTextView
        android:id="@+id/txt_powiat"
        style="@style/Details_Text.Description"/>

    <pl.ipebk.tabi.ui.custom.FontTextView
        android:id="@+id/txt_gmina"
        style="@style/Details_Text.Description"/>

    <pl.ipebk.tabi.ui.custom.FontTextView
        android:id="@+id/txt_additional"
        android:layout_marginBottom="24dp"
        style="@style/Details_Text.Description"/>

    <RelativeLayout
        android:id="@+id/wrap_map"
        style="@style/Details_Map_Wrapper">
        <include layout="@layout/panel_details"/>
        <include layout="@layout/map_details"/>
    </RelativeLayout>
</LinearLayout>