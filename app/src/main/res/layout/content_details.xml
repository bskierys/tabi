<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <pl.ipebk.tabi.ui.custom.FontTextView
            android:id="@+id/txt_place_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_weight="1"
            android:textAppearance="?attr/textAppearanceListItem"
            app:fontFamily="montserrat"/>

        <pl.ipebk.tabi.ui.custom.FontTextView
            android:id="@+id/txt_plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            app:fontFamily="montserrat"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/grey_800"/>

    <ImageView
        android:id="@+id/img_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/tabi_embarrassed"
        android:visibility="gone"/>

    <pl.ipebk.tabi.ui.custom.FontTextView
        android:id="@+id/txt_voivodeship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem"/>

    <pl.ipebk.tabi.ui.custom.FontTextView
        android:id="@+id/txt_powiat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem"/>

    <pl.ipebk.tabi.ui.custom.FontTextView
        android:id="@+id/txt_gmina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem"/>

    <pl.ipebk.tabi.ui.custom.FontTextView
        android:id="@+id/txt_additional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_google_it"
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:text="G"/>

        <Button
            android:id="@+id/btn_voivodeship"
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:text="V"/>

        <Button
            android:id="@+id/btn_map"
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:text="M"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/wrap_map"
        style="@style/Details.Map">

        <ImageView
            android:id="@+id/img_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/grey_400"/>

        <ImageView
            android:id="@+id/img_pin"
            android:layout_width="36dp"
            android:layout_height="72dp"
            android:layout_centerInParent="true"
            android:scaleType="fitStart"
            android:src="@drawable/location"
            android:visibility="invisible"/>
    </RelativeLayout>
</LinearLayout>