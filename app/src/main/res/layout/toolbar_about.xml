<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="@dimen/Details.Margin.Right"
                android:layout_height="match_parent"
                android:contentDescription="@string/description_back_button"
                android:paddingLeft="@dimen/Details.Margin.Outer"
                android:paddingRight="@dimen/Details.Margin.Outer"
                android:src="@drawable/ic_back"/>

            <pl.ipebk.tabi.presentation.ui.custom.FontTextView
                android:id="@+id/txt_searched"
                android:text="@string/title_activity_about"
                style="@style/Details_Text.Search"/>

        </LinearLayout>
    </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>