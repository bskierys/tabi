<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/root"
              android:background="@drawable/header_background"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Search.Height.Shadow"/>

    <pl.ipebk.tabi.ui.custom.FontTextView
        android:id="@+id/txt_header"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="HEADER"
        android:textColor="@color/grey_850"
        android:textSize="20sp"
        app:fontFamily="bebas"/>

    <ImageView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/Details.Margin.Right"
        android:layout_marginRight="@dimen/Details.Margin.Right"
        android:src="@color/sienna_300"/>
</LinearLayout>