<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            style="@style/BackArrow"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <pl.ipebk.tabi.presentation.ui.custom.FontTextView
                android:id="@+id/txt_searched"
                style="@style/Details_Text.Search"/>

            <pl.ipebk.tabi.presentation.ui.custom.FontEditText
                android:id="@+id/editTxt_search"
                style="@style/Details_Text.Search"
                android:background="@android:color/transparent"
                android:hint="Jakiej rejestracji szukasz?"
                android:imeOptions="actionSearch|flagNoExtractUi"
                android:inputType="textNoSuggestions"
                android:textColorHint="@color/white_semi_transparent"
                android:textCursorDrawable="@drawable/dark_cursor"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/btn_clear"
            android:layout_width="@dimen/Details.Margin.Right"
            android:layout_height="match_parent"
            android:contentDescription="@string/description_close_button"
            android:paddingLeft="@dimen/Details.Margin.Outer"
            android:paddingRight="@dimen/Details.Margin.Outer"
            android:src="@drawable/ic_close"
            android:visibility="gone"/>
    </LinearLayout>

    <pl.ipebk.tabi.presentation.ui.search.SearchTabPageIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Search.Height.Tabs"
        android:background="@color/white"
        android:textColor="@color/grey_850"
        android:textSize="@dimen/Search.Text.Header"
        app:fades="false"
        app:fontFamily="bebas"
        app:lineHeight="@dimen/Search.Height.Tabs.Underline"
        app:selectedTextColor="@color/colorPrimary"/>

</LinearLayout>