<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="vpiUnderlinePageIndicatorStyle">@style/UnderlinePageIndicatorStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="vpiUnderlinePageIndicatorStyle">@style/UnderlinePageIndicatorStyle</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="vpiUnderlinePageIndicatorStyle">@style/UnderlinePageIndicatorStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.Placeholder" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/loading_screen</item>
    </style>

    <style name="UnderlinePageIndicatorStyle">
        <item name="android:background">@color/white</item>
        <item name="selectedColor">@color/colorPrimary</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <attr name="fontFamily" format="string" />

    <declare-styleable name="Fonts">
        <attr name="android:textStyle" />
        <attr name="fontFamily" />
    </declare-styleable>

    <declare-styleable name="DetailsButton">
        <attr name="text" format="string"/>
        <attr name="doodle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="SearchTabPageIndicator">
        <!--  Text size of titles in indicator  -->
        <attr name="android:textSize"/>
        <!--  Color of selected text  -->
        <attr name="selectedTextColor" format="color"/>
        <!--  Color of standard (deselected) text  -->
        <attr name="android:textColor"/>
        <!--  Font family of text in tabs  -->
        <attr name="fontFamily" />
        <!--  Height of line under text that indicates selected tab  -->
        <attr name="lineHeight" format="dimension"/>
    </declare-styleable>

    <style name="Text_Toolbar" parent="Text_Body2.Dark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/Details.Margin.Outer</item>
    </style>

    <!--  MAIN  -->
    <style name="Main_Doodle">
        <item name="android:layout_marginRight">@dimen/Main.Margin.Greeting.Doodle.Right</item>
        <item name="android:layout_marginTop">@dimen/Main.Margin.Greeting.Doodle.Top</item>
        <item name="android:layout_height">@dimen/Main.Height.Greeting.Doodle</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="Main_Text_Caption" parent="Text_Body2.Primary">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginRight">80dp</item>
    </style>

    <style name="Main_Text_Caption.Small" parent="Main_Text_Caption">
        <item name="android:textSize">@dimen/Main.Text.Caption.Small</item>
    </style>

    <style name="Main_Text_Caption.Large" parent="Main_Text_Caption">
        <item name="android:textSize">@dimen/Main.Text.Caption.Large</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!--  DETAILS  -->
    <style name="Details_Map_Wrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Details_Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/Details.Padding.Panel.Button</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Details_Text.Description" parent="Text_Body.Secondary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/Details.Height.Text.Description</item>
        <item name="android:layout_marginLeft">@dimen/Margin.Horizontal</item>
        <item name="android:layout_marginRight">@dimen/Details.Margin.Outer</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Details_Text.Description.Search" parent="Details_Text.Description">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="BackArrow">
        <item name="android:layout_width">@dimen/Button.Icon.Square</item>
        <item name="android:layout_height">@dimen/Button.Icon.Square</item>
        <item name="android:contentDescription">@string/description_back_button</item>
        <item name="android:paddingLeft">@dimen/Toolbar.Icon.Margin</item>
        <item name="android:paddingRight">@dimen/Toolbar.Icon.Margin</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:src">@drawable/ic_back_dark</item>
    </style>

    <style name="Divider">
        <item name="android:src">@color/grey_300</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
    </style>

    <style name="Shadow">
        <item name="android:visibility">visible</item>
    </style>

    <style name="Shadow.2dp" parent="Shadow">
        <item name="android:src">@drawable/shadow2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/Shadows.Height.2dp</item>
    </style>

</resources>
